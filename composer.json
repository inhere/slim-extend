{
  "name": "inhere/slim-extend",
  "type": "library",
  "description": "A Slim Framework extension",
  "keywords": ["Slim","extensions"],
  "homepage": "http://github.com/inhere/slim-extend",
  "license": "MIT",
  "authors": [
    {
      "name": "inhere",
      "email": "in.798@qq.com",
      "homepage": "http://www.yzone.net/"
    }
  ],
  "require": {
    "php": ">=5.5.0",
    "slim/slim": "^3.1",
    "slim/flash": "^0.1.0",
    "slim/csrf": "^0.6.0",
    "symfony/yaml": "^3.0",
    "windwalker/query": "^2.1",
    "inhere/php-validate": "~1.0"
  },
  "require-dev": {
      "filp/whoops": "2.*",
      "inhere/slim-whoops": "dev-master",
      "inhere/simple-print-tool": "dev-master"
  },
  "autoload":{
    "files":[
      "src/defined.php",
      "src/functions.php"
    ],
    "classmap": ["src/Slim.php"],
    "psr-4": {
      "slimExtend\\" : "src/"
    }
  },
  "suggest": {
    "symfony/yaml": "Allow support parse yml file."
  },
  "repositories": [
    {
      "type": "git",
      "url": "https://git.oschina.net/inhere/simple-print-tool"
    },
    {
      "type": "git",
      "url": "https://git.oschina.net/inhere/slim-whoops"
    },
    {
      "type": "git",
      "url": "https://git.oschina.net/inhere/php-validate"
    }
  ]
}
